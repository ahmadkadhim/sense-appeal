
<h1><%= link_to "Sense Appeal", root_path %>


<h2>Coffees</h2>


<ul>
	<% @roasts.each do |roast| %>
		<li class="roast">
			<h3><%= link_to roast.name, coffee_path(roast) %></h3>
			<h4><%= roast.origin %></h4>
			<p><%= roast.description %></p>
			<%= link_to "Edit", edit_coffee_path(roast) %>
			<br>
			<%= link_to "Delete", coffee_path(roast), :confirm => "Sure you want to delete this coffee?", :method => :delete %>
		</li>
	<% end %>
</ul>

<%= link_to "Add A New Roast", new_coffee_path %>