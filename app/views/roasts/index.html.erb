<div class="row">
	<div class="coffees-page small-11 large-10 small-centered columns">
		<h1><%= link_to root_path do %>	
			Sense Appeal<br/>Coffee<br/>Roasters
			<% end %>
		</h1>

		<h2>Coffees</h2>

		<h4><%= link_to "Add A New Roast", new_coffee_path %></h4>

		<ul id="coffee-blocks">
			<% @roasts.each do |roast| %>
				<li class="coffees-page blocks">
					<%= link_to coffee_path(roast) do %>
						<h2 class="coffee-names"><%= roast.name %></h2>
						<h6>Origin</h6>
						<p><%= roast.origin %></p>
						<h6>Description</h6>
						<p><%= roast.description %></p>
					<% end %>
				</li>
			<% end %>
		</ul>
		<div class="clear"></div>
	</div>
</div>


