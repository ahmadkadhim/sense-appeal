<%= render "partials/header" %>

<section class="content-pages">
	<div class="row">
		<div class="menus small-11 large-10 small-centered columns">
			<h1 class="small">	
				<%= link_to root_path do %>	
				Sense Appeal<br/>Coffee<br/>Roasters
				<% end %>
			</h1>

			<h2>Menus</h2>

			<ul>
				<% @menus.each do |menu| %>
					<li class="menus">
						<h3><%= link_to menu.title, menu %></h3>

						<%= link_to "Edit", edit_menu_path(menu) %>
						<br>
						<%= link_to "Delete", menu, :confirm => "Sure you want to delete this menu?", :method => :delete %>
					</li>
				<% end %>
			</ul>

			<%= link_to "Add A New Menu", new_menu_path %>
		</div>
	</div>
</section>